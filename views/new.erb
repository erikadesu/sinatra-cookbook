
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-sm-offset-2">
      <div class="new-form">
      <h2 class="text-center title">Add a recipe</h2>

      <form class="form-horizontal" action="/recipes" method="post">
          <div class="form-group">
            <label for="name"></label>
            <input class="form-control" type="text" name="name" placeholder="Recipe name">
          </div>
          <div class="form-group">

          <label for="description"></label>
          <input class="form-control input-medium" type="text" name="description" placeholder="Description">
        </div>
         <div class="form-group ">
          <label for="ingredients"></label>
          <input class="form-control input-large" type="text" name="ingredients" placeholder="Ingredients">
        </div>
         <div class="form-group">
          <label for="instructions"></label>
          <input class="form-control input-large" type="text" name="instructions" placeholder="Instructions">
        </div>
        <input class="btn btn-lg btn-info" style="margin: 30px 60px;" type="submit" value="Add to Cookbook!">
      </form>
      <a href="/" style="margin-top: 30px">Back</a>
      </div>
    </div>
  </div>
</div>
